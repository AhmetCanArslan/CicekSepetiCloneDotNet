@page
@model CicekSepetiCloneDotNet.Pages.SellerPage.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2>Seller Page</h2>
<br />
<h3>Buradan ürünlerinizin ve kategorilerinizin yönetimini yapabilirsiniz</h3>
<br />

<div class="container mt-5">
    <h4 class="text-center mb-4">Yeni Mesajlar</h4>
    @if (Model.UnreadListMessage != null && Model.UnreadListMessage.Any())
    {
        <h4 class="text-center mb-4">Lütfen Sipariş Kutunuzu Kontrol Edin</h4>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Başlık</th>
                    <th>Ürün Id</th>
                    <th>  </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.UnreadListMessage)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.productId</td>
                        <td>
                            <form asp-page-handler="ReadMessage" method="post">
                                <input type="hidden" name="message_id" value="@item.Id" />
                                <input type="hidden" name="seller_id" value="@item.SellerId" />
                                <button type="submit" class="btn btn-sm btn-danger">Okundu İşaretle</button>
                            </form>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            Henüz Yeni Mesajınız Yok.
        </div>
    } 
</div>

<br />
<br />
<div class="container mt-5">
    <h4 class="text-center mb-4">Okunan Mesajlar</h4>
    @if (Model.ReadListMessage != null && Model.ReadListMessage.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Başlık</th>
                    <th>Ürün Id</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ReadListMessage)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.productId</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            Eski Mesaj Yok.
        </div>
    }
    </div>

