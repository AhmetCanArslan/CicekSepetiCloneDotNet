@page
@model CicekSepetiCloneDotNet.Pages.Products.PreviewModel
@{
}
<main class="product-details">
    <div class="product-image">
        <img src="urun_gorseli.jpg" alt="Ürün Adı">
    </div>
    <div class="product-info">
        <h1>Ürün Adı</h1>
        <p class="price">₺199.99</p>
        <p class="description">Bu ürün hakkında açıklama metni. Ürünün detayları, malzeme bilgisi, teslimat seçenekleri gibi bilgiler buraya eklenebilir.</p>

        <div class="quantity">
            <label for="quantity">Adet:</label>
            <input type="number" id="quantity" name="quantity" value="1" min="1">
        </div>

        <button class="add-to-cart">Sepete Ekle</button>
    </div>
</main>