@page
@model CicekSepetiCloneDotNet.Pages.Products.CategoryFilterModel
@{
}
<main class="products-section">
    @if (Model.productList.Count == 0)
    {
        <h2>Ürün Bulunamadı</h2>
    }
    else
    {
        <h2>@Model.Categoryid Kategorisindeki Ürünler</h2>
        <div class="product-list">


            @foreach (var item in Model.productList)
            {
                <div class="product-card">
                    <a href="/Products/Preview?id=@item.product_id" class="product-link">
                        <img src="~/assets/products/@item.product_image" alt="@item.product_name">
                        <h3>@item.product_name</h3>
                        <p>₺@item.product_price</p>
                    </a>
                </div>
            }
        </div>
    }
    
</main>