@page
@model CicekSepetiCloneDotNet.Pages.Products.OrdersModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center mb-4">Henüz Onaylanmayan Siparişlerim</h1>

    @if (Model.orders != null && Model.orders.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Ürün Görseli</th>
                    <th>Ürün Adı</th>
                    <th>Ürün Adedi</th>
                    <th>OrderDate</th>
                    <th>is Sent</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.orders)
                {
                    <tr>
                        <td><img src="~/assets/products/@item.product_image" alt="Product Image" style="width: 100px; height: 100px; " /></td>
                        <td>@item.product_name</td>
                        <td>@item.productQuantity</td>
                        <td>@item.orderDate</td>
                        <td>@item.isSent</td>

                    </tr>
                }
            </tbody>
        </table>

       
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            Henüz Yeni Siparişiniz Yok.
        </div>
    }
</div>

<br/>
<br/>
<div class="container mt-5">
    <h1 class="text-center mb-4">Onaylanan Siparişlerim</h1>

    @if (Model.OldOrders != null && Model.OldOrders.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Ürün Görseli</th>
                    <th>Ürün Adı</th>
                    <th>Ürün Adedi</th>
                    <th>OrderDate</th>
                    <th>is Sent</th>
                    <th> </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OldOrders)
                {
                    <tr>
                        <td><img src="~/assets/products/@item.product_image" alt="Product Image" style="width: 100px; height: 100px; " /></td>
                        <td>@item.product_name</td>
                        <td>@item.productQuantity</td>
                        <td>@item.orderDate</td>
                        <td>@item.isSent</td>
                        <td><a href="/AdminPage/Comments/Create?product_id=@item.product_id&user_id=@Model.user_id">Yorum Yap</a></td>

                    </tr>
                }
            </tbody>
        </table>


    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            Henüz Eski Siparişiniz Yok.
        </div>
    }
</div>