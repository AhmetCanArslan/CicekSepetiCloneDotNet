@page
@model CicekSepetiCloneDotNet.Pages.Login.PasswordResetModel
@{
    Layout = "~/Pages/Shared/LoginLayout.cshtml";
}
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
    </div>
}
<form method="Post">
<p>
    <label>E-mail Adresi<span>*</span></label>
    <input type="email" name="email" required>
</p>
<p>
    <label>Telefon Numarası<span>*</span></label>
    <input type="tel" name="phone" required>
</p>
<p>
    <label>
        <a asp-page="/Users/LoginIndex">Şifremi Sıfırladım</a>
    </label>
    <input type="submit" value="Sıfırla" />
<p/>
</form>