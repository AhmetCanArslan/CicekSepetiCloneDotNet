@page
@model LoginIndexModel
@{
    Layout = "~/Pages/Shared/LoginLayout.cshtml";
}
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>

    </div>
}
<form method="Post">
<p>
    <label>E-mail Adresi<span>*</span></label>
    <input type="email" required name="mail" value="@Model.userInfo.user_mail">
</p>
    <p>
        <label>Şifre<span>*</span></label>
        <input type="password" required name="password" value="@Model.userInfo.user_pass">
    </p>
<p>
    <label>
        <a asp-page="/Login/PasswordReset">Şifremi Unuttum</a>
        <a asp-page="/Login/Registration">Hesap oluştur</a>
    </label>
    <input type="submit" value="Giriş yap" />
</p>
</form>
