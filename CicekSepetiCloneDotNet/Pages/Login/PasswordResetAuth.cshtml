@page
@model CicekSepetiCloneDotNet.Pages.Login.PasswordResetAuthModel
@{
    Layout = "~/Pages/Shared/LoginLayout.cshtml";
}
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
    </div>
}
<form method="Post">
<p>
    <label>Yeni Şifre<span>*</span></label>
        <input type="password" name="password1" required>
</p>
<p>
        <label>Yeni Şifre Tekrar<span>*</span></label>
        <input type="password" name="password2" required>
</p>
<p>
    <input type="submit" value="Sıfırla" />
<p/>
</form>