@page
@model AuthIndexModel
@{
    ViewData["Title"] = "Çiçeksepeti";
    Layout = "/Pages/Shared/AuthDefaultPageLayout.cshtml";
}

<main class="products-section">
    <h2>Öne Çıkan Ürünler</h2>
    <div class="product-list">
       
            @foreach (var item in Model.listProduct)
            {
                <div class="product-card">
                    <a href="/Products/Preview?id=@item.product_id" class="product-link">
                        <img src="~/assets/products/@item.product_image" alt="@item.product_name">
                        <h3>@item.product_name</h3>
                        <p>₺@item.product_price</p>
                    </a>
                </div>
            }
        
        
    </div>
</main>




