@page
@model CreateModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";

}
<br />

<h2>Create User</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

    </div>
}
@if (Model.intMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.intMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

    </div>
}

<form method="Post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.userInfo.user_name">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Surname</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="surname" value="@Model.userInfo.user_surname">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Mail</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="mail" value="@Model.userInfo.user_mail">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Number</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="number" value="@Model.userInfo.user_number">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">City</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="city" value="@Model.userInfo.user_city">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Pass</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="pass" value="@Model.userInfo.user_pass">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="category" value="@Model.userInfo.user_category">
        </div>
    </div>

    @if (Model.succesMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-secondary alert-dismissible fade show" role="alert">
                    <strong>@Model.succesMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>

        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Users" role="button">Cancel</a>
        </div>
    </div>
</form>