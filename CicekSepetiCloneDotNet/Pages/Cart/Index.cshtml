@page
@model CicekSepetiCloneDotNet.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Sepetim";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5">
    <h1 class="text-center mb-4">Sepetim</h1>

    @if (Model.CartItems != null && Model.CartItems.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Ürün</th>
                    <th>Fiyat</th>
                    <th>Miktar</th>
                    <th>Toplam</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <img src="@item.ProductImage" alt="Ürün Görseli" class="img-thumbnail" style="width: 100px; height: 100px;" />
                            <span class="ms-2">@item.ProductName</span>
                        </td>
                        <td>@item.Price.ToString("C")</td>
                        <td>
                            <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                <input type="hidden" name="CartId" value="@item.CartId" />
                                <input type="number" name="Quantity" value="@item.Quantity" min="1" class="form-control d-inline-block w-50" />
                                <button type="submit" class="btn btn-sm btn-primary">Güncelle</button>
                            </form>
                        </td>
                        <td>@(item.Quantity * item.Price).ToString("C")</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="CartId" value="@item.CartId" />
                                <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-4">
            <h4>Genel Toplam: @Model.CartItems.Sum(x => x.Quantity * x.Price).ToString("C")</h4>
            <form asp-action="Checkout" method="post">
                <button type="submit" class="btn btn-success">Alışverişi Tamamla</button>
            </form>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            Sepetinizde ürün bulunmamaktadır.
        </div>
    }
</div>
